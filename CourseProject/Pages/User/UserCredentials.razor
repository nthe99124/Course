@page "/user/user_credentials"
@inherits AuthorBaseComponent

<SideTopUser message="Thông tin xác thực"></SideTopUser>
<div class="user-dashboard-area pt-3">
    <div class="container">
        <div class="row">
            <SideLeftUser isSelected=5></SideLeftUser>
            <div class="col-md-8 col-lg-9 mt-4 mt-md-0">
                <form class="w-100 bg-white radius-10 p-4 box-shadow-5" action="https://4user.net/home/update_profile/update_credentials" method="post">
                    <div class="row">
                        <div class="col-12 border-bottom mb-3 pb-3">
                            <h4>Thông tin tài khoản</h4>
                            <p>Chỉnh sửa cài đặt tài khoản của bạn</p>
                        </div>
                        <div class="col-12 mb-3">
                            <label class="text-dark" for="email">Email</label>
                            <div class="input-group">
                                <input type="email" class="form-control" name="email" id="email" placeholder="Email" value="nthe99124@gmail.com" disabled="">
                            </div>
                        </div>

                        <hr class="my-4 bg-secondary">

                        <div class="col-12 mb-3">
                            <label class="text-dark" for="current_password">Mật khẩu hiện tại</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                                <input type="password" class="form-control" id="current_password" name="current_password" placeholder="Nhập mật khẩu hiện tại">
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <label class="text-dark" for="new_password">Hiện tại mật khẩu</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input type="password" class="form-control" id="new_password" name="new_password" placeholder="Nhập mật khẩu mới">
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <label class="text-dark" for="confirm_password">Xác nhận mật khẩu</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input type="password" class="form-control" id="confirm_password" name="confirm_password" placeholder="Gõ lại mật khẩu của bạn">
                            </div>
                        </div>

                        <div class="col-12 pt-4">
                            <button class="btn red px-5 py-2 radius-8">Lưu thay đổi</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

